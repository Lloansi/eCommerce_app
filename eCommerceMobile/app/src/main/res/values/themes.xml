<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerceMobile" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="backgroundColor">@color/lightgray</item>
        <item name="colorPrimary">@color/vhost_orange</item>
        <item name="colorPrimaryContainer">@color/vhost_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/lightgray</item>
        <item name="colorSecondaryContainer">@color/vhost_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorTertiary">@color/vhost_orange</item>
        <item name="colorTertiaryContainer">@color/vhost_orange</item>

        <item name="navigationIconTint">@color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/vhost_orange</item>

    </style>
    <style name="Theme.ECommerceMobile" parent="Base.Theme.ECommerceMobile" />
</resources>