<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@color/mateBlack"
    >

    <LinearLayout
        android:id="@+id/headersLY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:text="@string/date_ordered"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_width="100dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:text="@string/total"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Order Nº"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_width="150dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/headersInfoLY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headersLY"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/dateOrderedTV"
            android:text="10/10/2023"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/totalPriceTV"
            android:text="29.99€"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/orderNumberTV"
            android:text="1"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/headersInfoLY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_margin="8dp"
        />
    <ImageView
        android:layout_margin="6dp"
        app:layout_constraintTop_toBottomOf="@id/topView"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/product1IV"
        android:src="@color/ligthgray"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <ImageView
        android:layout_margin="6dp"
        app:layout_constraintTop_toBottomOf="@id/product1IV"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/product2IV"
        android:layout_width="100dp"
        android:src="@color/ligthgray"
        android:layout_height="100dp"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/categoryChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:checkable="false"
        android:clickable="false"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        app:chipStrokeWidth="1dp"
        app:chipBackgroundColor="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/product1IV"
        app:layout_constraintTop_toTopOf="@id/product1IV"
        android:layout_marginStart="4dp"
        />
    <TextView
        android:id="@+id/product1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_placeholder"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintStart_toEndOf="@id/product1IV"
        app:layout_constraintTop_toBottomOf="@id/categoryChip"
        android:layout_marginStart="4dp"
        />

    <TextView
        android:id="@+id/price1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_placeholder"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintStart_toEndOf="@id/product1IV"
        app:layout_constraintTop_toBottomOf="@id/product1TV"
        android:layout_marginStart="4dp"
        />
    <com.google.android.material.chip.Chip
        android:id="@+id/category2Chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        android:checkable="false"
        android:clickable="false"
        app:chipStrokeWidth="1dp"
        app:chipBackgroundColor="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/product2IV"
        app:layout_constraintTop_toTopOf="@id/product2IV"
        android:layout_marginStart="4dp"
        />
    <TextView
        android:id="@+id/product2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_placeholder"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintStart_toEndOf="@id/product2IV"
        app:layout_constraintTop_toBottomOf="@id/category2Chip"
        android:layout_marginStart="4dp"
        />

    <TextView
        android:id="@+id/price2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_placeholder"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintStart_toEndOf="@id/product2IV"
        app:layout_constraintTop_toBottomOf="@id/product2TV"
        android:layout_marginStart="4dp"
        />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/seemoreBT"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        android:layout_gravity="bottom|end"
        app:elevation="1dp"
        android:text="Detail"
        app:backgroundTint="@color/orange"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="4dp"

        />
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="1dp"
        android:layout_marginTop="4dp"
        app:dividerInsetEnd="16dp"
        app:dividerInsetStart="16dp"
        app:lastItemDecorated="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>