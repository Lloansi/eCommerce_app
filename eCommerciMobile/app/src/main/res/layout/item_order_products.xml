<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mateBlack"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_margin="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/productIV"
        android:layout_width="100dp"
        android:background="@color/ligthgray"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_placeholder"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="4dp"
        />
    <com.google.android.material.chip.Chip
        android:id="@+id/categoryChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:checkable="false"
        android:clickable="false"
        app:chipStrokeWidth="1dp"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        app:chipBackgroundColor="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/productIV"
        app:layout_constraintTop_toBottomOf="@id/productTV"
        android:layout_margin="4dp"
        />
    <TextView
        android:id="@+id/productTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_placeholder"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintStart_toEndOf="@id/productIV"
        app:layout_constraintTop_toTopOf="@id/productIV"
        android:layout_marginStart="4dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>